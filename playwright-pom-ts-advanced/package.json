{
  "name": "playwright-pom-ts-advanced",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "PWDEBUG=1 npx playwright test",
    "test:report": "npx playwright show-report",
    "install:drivers": "npx playwright install --with-deps",
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf playwright-report test-results dist || true"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "rimraf": "^5.0.0",
    "prettier": "^2.8.0"
  }
}
